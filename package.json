{
  "scripts": {
    "lint-scss": "sass-lint static/**/*.scss --verbose --no-exit",
    "build": "yarn run build-css",
    "build-css": "node-sass --include-path node_modules static/sass --output static/css --output-style compressed && postcss --use autoprefixer --replace 'static/css/**/*.css' --no-map",
    "serve": "./entrypoint 0.0.0.0:${PORT}",
    "watch": "watch -p 'static/sass/**/*.scss' -p 'static/js/**/*.js' -c 'yarn run build'",
    "watch-scss": "watch -p 'static/sass/**/*.scss' -c 'yarn run build-css'",
    "clean": "rm -rf node_modules yarn-error.log css static/css *.log *.sqlite _site/ build/ .jekyll-metadata .bundle",
    "test": "yarn run python-lint",
    "python-lint": "flake8 webapp"
  },
  "dependencies": {
    "autoprefixer": "9.4.8",
    "node-sass": "4.11.0",
    "postcss-cli": "4.1.1",
    "sass-lint": "1.12.1",
    "vanilla-framework": "1.8.1",
    "watch-cli": "0.2.3"
  },
  "devDependencies": {
    "husky": "1.3.1",
    "prettier": "1.16.4",
    "pretty-quick": "1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
